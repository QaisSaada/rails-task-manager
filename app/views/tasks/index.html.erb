<h1>My Tasks<h1>
<div>
<ul>
<% @tasks.each do |task| %>
<li><%= link_to task.title, task_path(task) %> </li>
<li><%= link_to "Edit", edit_task_path(task) %></li>
<li><%= link_to "Delete", task_path(task),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
<% end %>
</ul>
<%= link_to "make a new task", new_task_path %>
</div>





